* {
  --fg: #cdcdcd;
  --afg: #bebebe;
  --xfg: #aaa;
  --bg: #0f1019;
  --abg:#11121d;
  --xbg:#191A23;
  --ac: #009696;
  --xac: #00b8b8;
	scrollbar-color: var(--ac) var(--bg) !important;
	scrollbar-width: thin !important;
  transition: all 500ms !important;
}

#nav-bar-customization-target image, #PlacesToolbar image {
  filter:grayscale(1) !important;
}
#nav-bar-customization-target:hover image, #PlacesToolbar:hover image {
  filter:grayscale(0) !important;
}
#nav-bar[urlbar-exceeds-toolbar-bounds="true"] toolbarbutton {
  display: none !important;
}

#customizationui-widget-panel{
  background-color: transparent !important;
  backdrop-filter: blur(2px) contrast(90%) !important;
}

/* Status Color Change */
#statuspanel #statuspanel-label {
  color: var(--fg) !important;
  background-color: transparent !important;
  border: none !important;
  backdrop-filter: blur(2px) contrast(90%) !important;
}

/* URL bar blur*/
#urlbar[open] > #urlbar-background{
  backdrop-filter: blur(60px) contrast(90%) !important;
  background-color: transparent !important;
  border-color: transparent !important;
}
.urlbarView{ margin-inline: 0px !important; width: 100% !important; }
.urlbarView-body-inner{ border: none !important }
.urlbarView-row-inner{ border-radius: 0px !important; }

/* New Tab Flash */
#browser vbox#appcontent tabbrowser,
#content,
#tabbrowser-tabpanels,
browser[type=content-primary],
browser[type=content] > html,
#navigator-toolbox {
    background: var(--bg) !important
}

.tab-line, .titlebar-buttonbox-container, .titlebar-spacer {
display: none !important;
}

/* Toolbar buttons */
.toolbarbutton-1 {
    fill: var(--xfg) !important;
    background-color: var(--bg) !important;
}

/* Change Overflow Icon*/
#PlacesChevron,#nav-bar-overflow-button {
  list-style-image: url("chrome://global/skin/icons/more.svg") !important;
}

/* Remove border under navbar */
#navigator-toolbox::after {
  border-bottom: 0px !important;
}

/* remove some borders */
#navigator-toolbox, #titlebar {
  border: none !important;
}

#tabbrowser-tabs {
background-color: var(--bg) !important;
--tab-min-height: 18px !important;
  margin-left: 0px !important;
  height: 25px !important;
  margin-bottom: 0px !important;
  text-align: center!important;
}

/* remove lines */
#navigator-toolbox::after {
  display: none !important;
}

#nav-bar, #TabsToolbar {
  border: none !important;
}

.tabbrowser-tab::before,
.tabbrowser-tab::after{
  display: none !important;

